<?xml version="1.0" encoding="utf-8"?>
<!--글씨크기 + 2 변경완료-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contents_popup_opacity_gray"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="169.36dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:src="@drawable/login_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_marginTop="103.27dp">

            <ImageView
                android:src="@drawable/searchpage_popup_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nanumbarungothic_normal"
                android:text="로그인 후 이용해주세요"
                android:textSize="18dp"
                android:textColor="#2b2b2b"/>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="29.61dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                
                <ImageView
                    android:id="@+id/login_goto_btn"
                    android:src="@drawable/login_blue_btn"
                    android:layout_width="72dp"
                    android:layout_height="26.39dp" />
                
                <ImageView
                    android:id="@+id/login_cancel_btn"
                    android:src="@drawable/login_cancle_btn"
                    android:layout_width="72dp"
                    android:layout_height="26.39dp"
                    android:layout_marginLeft="9dp"/>
                
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>