<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/unlikeable_tab_rv_item_ranking_img_iv"
        android:src="@drawable/main_bomb_red"
        android:layout_width="26dp"
        android:layout_height="34dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="18dp"
        android:layout_alignParentLeft="true">
    </ImageView>
    <TextView
        android:id="@+id/unlikeable_tab_rv_item_ranking_number_tv"
        android:text="1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textSize="13dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/nanumbarungothic"
        android:layout_marginRight="16dp"/>

    <RelativeLayout
        android:layout_toRightOf="@id/unlikeable_tab_rv_item_ranking_number_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/in_unlikeable_tab_rv_item_vote_count_bar_shape"
            android:layout_marginLeft="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="200dp"
            android:layout_height="20dp">
            <TextView
                android:id="@+id/unlikeable_tab_rv_item_name_party_tv"
                android:text="홍길동 _숭구리당당"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:layout_marginLeft="28dp"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/nanumbarungothiclight"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/unlikeable_tab_rv_item_vote_count_tv"
                android:text="125000표"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/nanumbarungothiclight"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/main_legislator_profile_circle_blue"
            android:layout_width="52dp"
            android:layout_height="52dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/unlikeable_tab_rv_item_picture_iv"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="#BBDEFB"
            android:layout_marginLeft="2dp"
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </RelativeLayout>
    <ImageView
        android:src="@drawable/main_vote_circle_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        />
    <ImageView
        android:id="@+id/unlikeable_tab_rv_item_isvote_btn"
        android:src="@drawable/main_vote_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        />

</RelativeLayout>