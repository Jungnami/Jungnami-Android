<?xml version="1.0" encoding="utf-8"?>

<!--Written by SooYoung-->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="232dp"
        android:layout_height="287dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:src="@drawable/coinpage_popup_character"
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                />

            <ImageView
                android:src="@drawable/coinpage_popup_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="56dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="232dp"
            android:layout_height="207dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sponsoring_frag_box_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nanumbarungothic_normal"
                android:text="후원하기"
                android:textSize="18sp"
                android:textColor="#6b6b6b" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="86dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbarungothiclight_normal"
                            android:text="나의 코인"
                            android:textSize="12dp"
                            android:textColor="#757575"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="24dp">

                        <TextView
                            android:id="@+id/legislator_user_coin_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbarungothic_normal"
                            android:text="-코인"
                            android:textSize="12dp"
                            android:textColor="#36c5f1"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="27dp">

                    <RelativeLayout
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbarungothiclight_normal"
                            android:text="후원 코인"
                            android:textSize="12dp"
                            android:textColor="#757575"/>

                    </RelativeLayout>

                    <EditText
                        android:layout_marginRight="16dp"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/legi_dialog_sponse_coin_count_input_et"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#36C5F1"
                        android:hint="입력"
                        android:inputType="number"
                        android:textColor="#36C5F1"
                        android:textColorHint="#D8D8D8"
                        android:textSize="12dp" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="16dp">

                <ImageView
                    android:id="@+id/legislator_page_popup_cancel_btn"
                    android:src="@drawable/coinpage_popup_cancle_btn_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/legislator_page_popup_check_btn"
                    android:src="@drawable/coinpage_popup_check_btn_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:src="@drawable/coinpage_popup_good_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>