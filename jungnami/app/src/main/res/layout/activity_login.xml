<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:src="@drawable/login_chrarcter_image"
            android:layout_width="210dp"
            android:layout_height="165dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="451dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kakao_login_btn"
            android:src="@drawable/kakao_login"
            android:layout_width="280dp"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/facebook_login_btn"
            android:src="@drawable/facebook_login"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"/>

    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="29dp">

        <TextView
            android:id="@+id/login_pass_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothicbold_normal"
            android:text="건너뛰기  >"
            android:textSize="15dp"
            android:textColor="#36c5f1"/>

    </RelativeLayout>

</RelativeLayout>