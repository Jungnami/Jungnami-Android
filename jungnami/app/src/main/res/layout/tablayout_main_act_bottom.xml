<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:background="#FFFFFF">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_alignParentTop="true"
        android:background="#6B6B6B" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/main_act_bottom_navi_rank_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/main_act_bottom_navi_item_rank_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_act_bottom_navi_list_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/main_act_bottom_navi_item_list_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_act_bottom_navi_community_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/main_act_bottom_navi_item_community_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_act_bottom_navi_content_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/main_act_bottom_navi_item_content_selector" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
