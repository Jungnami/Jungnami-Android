<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:id="@+id/rv_item_legislator_background_ll">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rv_item_legislator_rank_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="2dp"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:text="1"
            android:textColor="#36c5f1"
            android:textSize="13dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="38dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rv_item_legislator_party_color_img_iv"
            android:src="@color/Gray"
            android:layout_width="52.93dp"
            android:layout_height="52.93dp"
            android:layout_centerInParent="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rv_item_legislator_profile_img_iv"
            android:src="@drawable/legislatorpage_profile_circle"
            android:layout_width="49.14dp"
            android:layout_height="49.14dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/rv_item_legislator_likable_vote_btn"
                android:src="@drawable/main_good_btn_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/rv_item_legislator_unlikable_vote_btn"
                android:src="@drawable/main_bad_btn_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="108dp"
        android:layout_marginRight="48dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rv_item_legislator_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:text="임수영"
            android:textSize="15dp"
            android:textColor="#6b6b6b"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rv_item_legislator_likable_district_rankinall_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothic_normal"
                android:text="1위"
                android:textSize="13dp"
                android:textColor="#36c5f1"
                />

            <TextView
                android:id="@+id/rv_item_legislator_likable_position_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/nanumbarungothic_normal"
                android:text="서울 서초구 갑"
                android:textSize="13dp"
                android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rv_item_legislator_btn"
        android:layout_marginRight="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>
</RelativeLayout>