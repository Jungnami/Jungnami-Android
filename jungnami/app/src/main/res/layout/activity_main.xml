<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <sopt_jungnami_android.jungnami.main.MainViewPager
        android:id="@+id/main_act_fragment_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/main_act_bottom_tab">

    </sopt_jungnami_android.jungnami.main.MainViewPager>
    <android.support.design.widget.TabLayout
        android:id="@+id/main_act_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        app:tabIndicatorHeight="0dp">
    </android.support.design.widget.TabLayout>
    <ImageView
        android:id="@+id/main_act_unlikeable_icon_with_animation_iv"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:src="@drawable/vote_animation_icon_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/main_act_likeable_icon_with_animation_iv"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:src="@drawable/vote_animation_icon_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>