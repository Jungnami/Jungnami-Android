<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".mypage.UserPageActivity">
    <!--made by YounHwan-->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#FFFFFF">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/userpage_act_top_bar_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="?android:selectableItemBackground"
                android:padding="6dp"
                android:src="@drawable/mypage_back_arrow_gray" />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userpage_act_user_picture"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/alarm_none_profile_woman_image" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="86dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="142dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/mypage_act_box_shape">

                        <TextView
                            android:id="@+id/userpage_act_user_id_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nanumbarungothic"
                            android:gravity="center"
                            android:text="예쁜문어"
                            android:textColor="#707070"
                            android:textSize="12dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="38dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/mypage_act_box_shape">

                        <ImageView
                            android:id="@+id/userpage_act_user_setting_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/otheruserpage_follow_btn" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/userpage_act_scrap_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="73"
                            android:textColor="#2B2B2B"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/userpage_act_scrap_count_tv"
                            android:layout_centerHorizontal="true"
                            android:text="스크랩"
                            android:textColor="#C6C6C6"
                            android:textSize="9dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/userpage_act_myfeed_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="16"
                            android:textColor="#2B2B2B"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/userpage_act_myfeed_count_tv"
                            android:layout_centerHorizontal="true"
                            android:text="피드"
                            android:textColor="#C6C6C6"
                            android:textSize="9dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/userpage_act_following_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="100"
                            android:textColor="#2B2B2B"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/userpage_act_following_count_tv"
                            android:layout_centerHorizontal="true"
                            android:text="팔로잉"
                            android:textColor="#C6C6C6"
                            android:textSize="9dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/userpage_act_follower_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="120"
                            android:textColor="#2B2B2B"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/userpage_act_follower_count_tv"
                            android:layout_centerHorizontal="true"
                            android:text="팔로워"
                            android:textAlignment="center"
                            android:textColor="#C6C6C6"
                            android:textSize="9dp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="#858585" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userpage_act_scrap_tab_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center"
                    android:text="스크랩"
                    android:textColor="#36C5F1"
                    android:textSize="12dp" />

                <View
                    android:layout_width="0.25dp"
                    android:layout_height="match_parent"
                    android:background="#858585" />

                <TextView
                    android:id="@+id/userpage_act_feed_tab_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:gravity="center"
                    android:text="피드"
                    android:textColor="#D6D6D6"
                    android:textSize="12dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="#858585" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/userpage_act_recyclerview_list_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>