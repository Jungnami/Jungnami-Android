<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/act_contents_comment_reply_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        >


        <ImageView
            android:id="@+id/act_contents_comment_reply_backarrow_btn"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/contents_backarrow"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답글"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2B2B2B"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <View
        android:id="@+id/act_contents_comment_reply_below_line"
        android:layout_below="@id/act_contents_comment_reply_bar"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#9B9B9B"
        ></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/act_contents_comment_reply_rv"
        android:layout_below="@id/act_contents_comment_reply_below_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#9B9B9B"
        ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true">

        <!--EditText 넣어야하는 부분! -->

        <!--src로 이미지 버튼 추가하기-->


        <ImageView
            android:src="@color/colorAccent"
            android:id="@+id/act_contents_comment_reply_write_btn"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp" />
    </RelativeLayout>


</RelativeLayout>