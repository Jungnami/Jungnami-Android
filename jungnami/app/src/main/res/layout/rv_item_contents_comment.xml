            <!--android:textColor="#D0D0D2"-->
            <!--android:textSize="11sp" />-->




    </RelativeLayout>
    <View
        android:background="#9B9B9B"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        ></View>

</LinearLayout>