<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LegislatorList">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/border"
        >
        
        <ImageView
            android:id="@+id/legislator_list_act_back_btn"
            android:src="@drawable/back_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"/>
        
        <TextView
            android:id="@+id/legislator_list_act_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:text="정당"
            android:textSize="16sp"
            android:textColor="#6b6b6b"
            />
        
        <ImageView
            android:id="@+id/legislator_act_search"
            android:src="@drawable/legislator_search"
            android:layout_width="17.5dp"
            android:layout_height="17.5dp"
            android:layout_marginTop="21dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.5dp"/>
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal"
        android:elevation="1dp">

        <RelativeLayout
            android:id="@+id/legislator_list_act_likeable_tab_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/legislator_list_act_likeable_title_tv"
                android:layout_centerInParent="true"
                android:text="호감"
                android:textSize="16dp"
                android:textColor="#6B6B6B"
                android:fontFamily="@font/nanumbarungothic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/legislator_list_act_likable_underbar_line"
                android:background="#36C5F1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="99dp"
                android:layout_height="3dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/legislator_list_act_unlikeable_tab_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/legislator_list_act_unlikeable_title_tv"
                android:layout_centerInParent="true"
                android:text="비호감"
                android:textSize="16dp"
                android:textColor="#D8D8D8"
                android:fontFamily="@font/nanumbarungothic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/legislator_list_act_unlikeable_underbar_line"
                android:visibility="invisible"
                android:background="#36C5F1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="99dp"
                android:layout_height="3dp"/>

        </RelativeLayout>

    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/legislator_frag_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/legislator_list_act_is_display_search_box_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="#77000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/legislator_list_act_is_display_act_search_bar"
                android:background="@drawable/community_frag_bar_search_box_shape"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/legislator_list_act_search_iv"
                    android:src="@drawable/community_search"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginRight="8dp"/>

                <EditText
                    android:id="@+id/legislator_list_act_search_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/nanumbarungothiclight_normal"
                    android:background="#00000000"
                    android:textSize="12dp"
                    android:hint="'국회의원의 이름을 검색해보세요.'"
                    android:gravity="left|center"
                    android:layout_toRightOf="@+id/legislator_list_act_search_iv" />

            </RelativeLayout>

            <TextView
                android:id="@+id/legislator_list_act_search_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/nanumbarungothiclight_normal"
                android:text="취소" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>