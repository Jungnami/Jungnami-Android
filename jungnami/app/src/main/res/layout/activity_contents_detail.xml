<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ContentsDetail">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50.25dp"
        android:layout_marginLeft="15.5dp"
        android:background="#ececec"
        >

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/contents_act_detail_like_iv"
            android:src="@drawable/content_heart"
            android:layout_width="22.85dp"
            android:layout_height="21.81dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17.19dp"
            android:layout_marginLeft="15.57dp"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/contents_act_detail_comment_iv"
            android:src="@drawable/contents_chat_gray"
            android:layout_width="24dp"
            android:layout_height="23dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="58dp"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/contents_act_detail_share_iv"
            android:src="@drawable/contents_share_gray"
            android:layout_width="20.75dp"
            android:layout_height="22.01dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16.4dp"
            android:layout_marginLeft="95.75dp"/>

        <ImageView
            android:id="@+id/contents_act_detail_scrap_iv"
            android:src="@drawable/contents_scrap_full"
            android:layout_width="18.07dp"
            android:layout_height="24.1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17.41dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17.43dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/contents_act_detail_back_iv"
            android:src="@drawable/contents_backarrow_gray"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            android:onClick="onClick"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="423dp"
        android:layout_marginTop="56dp">

        <RelativeLayout
            android:backgroundTint="#000000"
            android:layout_width="match_parent"
            android:layout_height="361dp"
            android:layout_marginTop="42dp">

            <ImageView
                android:src="@drawable/ic_launcher_background"
                android:layout_width="378dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"/>
            
            <TextView
                android:layout_width="220dp"
                android:layout_height="53dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="32.5dp"
                android:layout_marginBottom="49.18dp"
                android:fontFamily="@font/nanumbarungothic_normal"
                android:text="한 국회의원의 부모님은"
                android:textColor="#dddddd"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="220dp"
                android:layout_height="53dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="32.5dp"
                android:layout_marginBottom="19.18dp"
                android:fontFamily="@font/nanumbarungothic_normal"
                android:text="'폐지'를 주우며 다니십니다."
                android:textColor="#dddddd"
                android:textSize="18sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="6dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true">

                <ImageView
                    android:src="@drawable/contents_bell_circle"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:src="@drawable/contents_dot_indicater_gray"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:src="@drawable/contents_dot_indicater_gray"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:src="@drawable/contents_dot_indicater_gray"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:src="@drawable/contents_dot_indicater_gray"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:src="@drawable/contents_dot_indicater_gray"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:src="@drawable/contents_dot_indicater_gray"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="539dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:fontFamily="@font/nanumbarungothiclight_normal"
            android:text="국회의원 아들과 폐지 줍는 부모님?"
            android:textColor="#e1e1e1"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="18dp"
            android:fontFamily="@font/nanumbarungothiclight_normal"
            android:text="스토리 * 2018.06.28 오후 12:02"
            android:textColor="#c2c2c2"
            android:textSize="12sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="14.2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="69.5dp">

        <ImageView
            android:src="@drawable/contents_smallheart_gray"
            android:layout_width="14.72dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="17.93dp"/>
        
        <TextView
            android:id="@+id/contents_act_detail_like_ppl_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginLeft="5.35dp"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:text="5,258명"
            android:textColor="#c3c3c3"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:text="이 좋아합니다"
            android:textColor="#c3c3c3"
            android:textSize="12sp"/>
        
        <ImageView
            android:src="@drawable/contents_smallchat_gray"
            android:layout_width="14.82dp"
            android:layout_height="14.2dp"
            android:layout_marginLeft="18.59dp"/>

        <TextView
            android:id="@+id/contents_act_detail_comment_list_tv"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginLeft="2.59dp"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:text="523개"
            android:textColor="#e2e2e2"
            android:textStyle="bold"
            android:textSize="12sp"/>

    </LinearLayout>

</RelativeLayout>