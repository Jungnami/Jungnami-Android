<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:visibility="gone"
        android:id="@+id/contents_search_commend_tv"
        android:layout_centerInParent="true"
        android:text="검색 결과 없음"
        android:textSize="24dp"
        android:textColor="#D8D8D8"
        android:fontFamily="@font/nanumbarungothic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/contents_search_act_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:padding="6dp"
                android:src="@drawable/contents_backarrow" />

            <RelativeLayout
                android:id="@+id/contents_search_act_search_bar"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/community_frag_bar_search_box_shape">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contents_search_act_search_result_rl"
                        android:visibility="visible"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/contents_search_act_search_iv"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/contents_search"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/contents_search_act_search_result_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="김성태"
                            android:layout_toRightOf="@+id/contents_search_act_search_iv"
                            android:visibility="visible"
                            android:textColor="#2B2B2B"
                            android:textSize="16dp"
                            android:layout_marginBottom="1dp"
                            />

                    </RelativeLayout>

                    <!--회색 박스(id : search_result_act_search_bar)를 클릭하면 -->
                    <!--EditText(id : search_result_act_search_hint_et)-->
                    <!--가 gone==>visible로 처리되고 -->
                    <!--TextView(id : search_result_act_search_reult_tv)가 visible ==> gone 처리를 해줘야한다.-->



                    <!--<RelativeLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent">-->

                        <!--<EditText-->
                            <!--android:id="@+id/search_nothing_result_act_search_hint_et"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:layout_centerVertical="true"-->
                            <!--android:layout_marginLeft="8dp"-->
                            <!--android:layout_toLeftOf="@+id/contents_search_act_search_btn"-->
                            <!--android:background="#00000000"-->
                            <!--android:fontFamily="@font/nanumbarungothic_normal"-->
                            <!--android:hint="컨텐츠를 검색해보세요."-->
                            <!--android:textColor="#2B2B2B"-->
                            <!--android:textSize="12sp"-->
                            <!--android:visibility="gone" />-->

                        <!--<TextView-->
                            <!--android:id="@+id/contents_search_act_search_btn"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:visibility="gone"-->
                            <!--android:text="검색"-->
                            <!--android:layout_marginRight="8dp"-->
                            <!--android:layout_centerVertical="true"-->
                            <!--android:layout_alignParentRight="true"/>-->



                    <!--</RelativeLayout>-->


                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#EBEBEB"></View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/contents_search_act_rv"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            android:layout_marginHorizontal="16dp"
            android:descendantFocusability="blocksDescendants">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <!--재검색을 위한 창-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/contents_search_act_is_display_search_box_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/contents_search_act_is_display_blind_panel_rl"
            android:background="#77000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/contents_search_act_top_bar_rl"
                android:background="@drawable/community_frag_bar_search_box_shape"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp">
                <ImageView
                    android:id="@+id/contents_search_act_top_bar_search_iv"
                    android:src="@drawable/community_search"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginRight="8dp"/>
                <EditText
                    android:id="@+id/contents_search_act_top_bar_search_et"
                    android:fontFamily="@font/nanumbarungothiclight"
                    android:background="#00000000"
                    android:textSize="12dp"
                    android:hint="'컨텐츠를 검색해보세요.'"
                    android:gravity="left|center"
                    android:layout_toRightOf="@+id/contents_search_act_top_bar_search_iv"
                    android:layout_toLeftOf="@+id/contents_search_act_search_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"/>
                <RelativeLayout
                    android:id="@+id/contents_search_act_search_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/contents_search_act_top_bar_search_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:text="검색"

                        />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contents_search_act_top_bar_search_cancel_btn"
                android:text="취소"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/nanumbarungothiclight_normal" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
