<?xml version="1.0" encoding="utf-8"?>

<!--written by Tak HyeongMin-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:visibility="gone"
        android:id="@+id/contents_search_commend_tv"
        android:layout_centerInParent="true"
        android:text="검색 결과 없음"
        android:textSize="24dp"
        android:textColor="#D8D8D8"
        android:fontFamily="@font/nanumbarungothic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/contents_search_act_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:padding="6dp"
                android:src="@drawable/contents_backarrow" />

            <RelativeLayout
                android:id="@+id/contents_search_act_search_bar"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/community_frag_bar_search_box_shape">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contents_search_act_search_result_rl"
                        android:visibility="visible"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/contents_search_act_search_iv"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/contents_search"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/contents_search_act_search_result_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="김성태"
                            android:layout_toRightOf="@+id/contents_search_act_search_iv"
                            android:visibility="visible"
                            android:textColor="#2B2B2B"
                            android:textSize="16dp"
                            android:layout_marginBottom="1dp"
                            />

                    </RelativeLayout>

                    <!--회색 박스(id : search_result_act_search_bar)를 클릭하면 -->
                    <!--EditText(id : search_result_act_search_hint_et)-->
                    <!--가 gone==>visible로 처리되고 -->
                    <!--TextView(id : search_result_act_search_reult_tv)가 visible ==> gone 처리를 해줘야한다.-->



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/search_nothing_result_act_search_hint_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toLeftOf="@+id/contents_search_act_search_btn"
                            android:background="#00000000"
                            android:fontFamily="@font/nanumbarungothic_normal"
                            android:hint="컨텐츠를 검색해보세요."
                            android:textColor="#2B2B2B"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/contents_search_act_search_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:text="검색"
                            android:layout_marginRight="8dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>



                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#EBEBEB"></View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/contents_search_act_rv"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            android:layout_marginHorizontal="16dp"
            android:descendantFocusability="blocksDescendants">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>
