<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contents.ContentsFragment"
    android:background="#FFFFFF">
    <!--made by YunHwan-->

    <LinearLayout
        android:id="@+id/contents_frag_top_box_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/contents_frag_top_bar_my_page_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:padding="6dp"
                    android:background="?android:selectableItemBackground">
                    <ImageView
                        android:src="@drawable/my_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/contents_frag_top_bar_search_box_search_rl"
                    android:background="@drawable/community_frag_bar_search_box_shape"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_toRightOf="@+id/contents_frag_top_bar_my_page_btn"
                    android:layout_toLeftOf="@id/contents_frag_top_bar_bell_btn">
                    <ImageView
                        android:id="@+id/contents_frag_top_bar_search_box_search_iv"
                        android:src="@drawable/community_search"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginRight="8dp"/>

                    <TextView
                        android:id="@+id/contents_frag_top_bar_search_btn"
                        android:text="컨텐츠를 검색해보세요."
                        android:fontFamily="@font/nanumbarungothiclight"
                        android:background="#00000000"
                        android:textSize="12dp"
                        android:gravity="left|center"
                        android:layout_toRightOf="@+id/contents_frag_top_bar_search_box_search_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="40dp"/>

                    <!--<TextView-->
                        <!--android:id="@+id/contents_frag_top_bar_search_insert_btn"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="검색"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_marginRight="12dp"-->
                        <!--android:layout_centerVertical="true"/>-->

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/contents_frag_top_bar_bell_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="16dp"
                    android:background="?android:selectableItemBackground">
                    <ImageView
                        android:src="@drawable/community_bell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"/>
                    <RelativeLayout
                        android:visibility="invisible"
                        android:id="@+id/contents_act_bell_circle_img"
                        android:layout_alignParentStart="true"
                        android:layout_width="16dp"
                        android:layout_height="16dp">
                        <ImageView
                            android:src="@drawable/mypage_bell_circle_blue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/contents_act_top_bar_new_post_counter_tv"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="0"
                            android:gravity="center"
                            android:textSize="9dp"
                            android:textColor="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/contents_frag_top_navi_ll"
            android:elevation="1dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_below="@+id/contents_frag_top_box_rl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingHorizontal="16dp">
            <RelativeLayout
                android:id="@+id/contents_frag_recommend_btn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground">
                <TextView
                    android:id="@+id/contents_frag_recommend_tv"
                    android:fontFamily="@font/nanumbarungothic"
                    android:textSize="14dp"
                    android:textColor="#36C5F1"
                    android:text="추천"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:visibility="visible"
                    android:id="@+id/contents_frag_recommend_underline"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#36C5F1"
                    android:layout_width="46dp"
                    android:layout_height="3dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/contents_frag_tmi_btn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground">
                <TextView
                    android:fontFamily="@font/nanumbarungothic"
                    android:id="@+id/contents_frag_tmi_tv"
                    android:textSize="14dp"
                    android:textColor="#D8D8D8"
                    android:text="TMI"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:visibility="invisible"
                    android:id="@+id/contents_frag_tmi_underline"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#36C5F1"
                    android:layout_width="46dp"
                    android:layout_height="3dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/contents_frag_story_btn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground">
                <TextView
                    android:id="@+id/contents_frag_story_tv"
                    android:fontFamily="@font/nanumbarungothic"
                    android:textSize="14dp"
                    android:textColor="#D8D8D8"
                    android:text="스토리"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:visibility="invisible"
                    android:id="@+id/contents_frag_story_underline"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#36C5F1"
                    android:layout_width="46dp"
                    android:layout_height="3dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/contents_frag_refresh_srl"
        android:layout_below="@+id/contents_frag_top_box_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true">
                <LinearLayout
                    android:id="@+id/contents_frag_total_blind"
                    android:orientation="vertical"
                    android:layout_below="@+id/contents_frag_top_box_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:id="@+id/contents_frag_main_content_lr"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="225dp">
                        <ImageView
                            android:id="@+id/contents_frag_main_content_image_iv"
                            android:src="#E2E2E2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/contents_frag_main_content_title_tv"
                            android:textSize="16dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:layout_marginLeft="17dp"
                            android:layout_above="@+id/contents_frag_main_content_info_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:id="@+id/contents_frag_main_content_info_tv"
                            android:fontFamily="@font/nanumbarungothiclight"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textColor="#EFEFEF"/>
                    </RelativeLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/contents_frag_sub_contents_recycler_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginHorizontal="16dp"
                        android:descendantFocusability="blocksDescendants">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/contents_frag_is_display_search_rl"
                    android:layout_below="@+id/contents_frag_top_box_rl"
                    android:visibility="gone"
                    android:background="#77000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="1dp"
                    android:nestedScrollingEnabled="false">
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <!--검색단-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/contents_frag_is_display_search_box_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/contents_frag_is_display_blind_panel_rl"
            android:background="#77000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/contents_frag_top_bar_rl"
                android:background="@drawable/community_frag_bar_search_box_shape"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp">
                <ImageView
                    android:id="@+id/contents_frag_top_bar_search_iv"
                    android:src="@drawable/community_search"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginVertical="8dp"
                    />
                <EditText
                    android:id="@+id/contents_frag_top_bar_search_et"
                    android:fontFamily="@font/nanumbarungothiclight"
                    android:background="#00000000"
                    android:textSize="12dp"
                    android:hint="'컨텐츠를 검색해보세요.'"
                    android:gravity="left|center"
                    android:layout_toRightOf="@+id/contents_frag_top_bar_search_iv"
                    android:layout_toLeftOf="@+id/contents_frag_search_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"/>
                <RelativeLayout
                    android:id="@+id/contents_frag_search_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/contents_frag_top_bar_search_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:text="검색"

                        />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contents_frag_top_bar_search_cancel_btn"
                android:text="취소"
                android:layout_marginRight="16dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/nanumbarungothiclight_normal" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>