<?xml version="1.0" encoding="utf-8"?>

<!-- written by SooYoung -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LegislatorPageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/legislator_page_act_back_btn"
            android:src="@drawable/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="6dp"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:background="?android:selectableItemBackground"/>

        <ImageView
            android:src="@drawable/app_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#f3f3f3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="16dp">

            <RelativeLayout
                android:layout_width="87.5dp"
                android:layout_height="87.5dp">

                <ImageView
                    android:id="@+id/legislator_page_act_party_color_iv"
                    android:src="@drawable/legislatorprofile_image_circle_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                
                <ImageView
                    android:id="@+id/legislator_page_act_profile_img_iv"
                    android:src="@drawable/legislatorpage_profile_circle"
                    android:layout_width="81.59dp"
                    android:layout_height="81.59dp"
                    android:layout_centerInParent="true"/>
                
            </RelativeLayout>

        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="4dp"
                        android:fontFamily="@font/nanumbarungothic_normal"
                        android:text="김병관"
                        android:textSize="22sp"
                        android:textColor="#343434"/>
                    
                    <ImageView
                        android:id="@+id/legislator_page_act_like_top3_iv"
                        android:src="@drawable/main_gold_medal_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.32dp"/>

                    <ImageView
                        android:id="@+id/legislator_page_act_unlike_top3_iv"
                        android:src="@drawable/legislatorpage_bomb_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7.42dp"/>
                    
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbarungothic_normal"
                            android:text="호감 1위 "
                            android:textSize="15sp"
                            android:textColor="#36c5f1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbarungothic_normal"
                            android:text="/"
                            android:textSize="15sp"
                            android:textColor="#36c5f1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbarungothic_normal"
                            android:text=" 비호감 35위 "
                            android:textSize="15sp"
                            android:textColor="#36c5f1"/>
                        
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumbarungothic_normal"
                        android:text="더불어 민주당"
                        android:textSize="12sp"
                        android:textColor="#9e9e9e"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumbarungothiclight_normal"
                        android:text="경기도 성남시 분당구 갑"
                        android:textSize="12sp"
                        android:textColor="#9e9e9e"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:id="@+id/legislator_page_act_like_btn"
                            android:src="@drawable/legislatorpage_good_btn_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/legislator_page_act_unlike_btn"
                            android:src="@drawable/legislatorpage_bad_btn_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"/>

                        <ImageView
                            android:id="@+id/legislator_page_act_sponsor_btn"
                            android:src="@drawable/legislatorpage_support_btn_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f3f3f3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#707070"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/nanumbarungothicbold_normal"
            android:text="관련된 컨텐츠"
            android:textSize="16sp"
            android:textColor="#2b2b2b"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="#707070"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>