                    <!--android:fontFamily="@font/nanumbarungothic_normal"-->
                    <!--android:hint="커뮤니티 글을 검색해보세요."-->
                    <!--android:textColor="#2B2B2B"-->
                    <!--android:textSize="12sp"-->
                     <!--/>-->

                <!--<TextView-->
                    <!--android:id="@+id/community_search_result_act_search_btn"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="검색"-->
                    <!--android:layout_marginRight="8dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_alignParentRight="true"/>-->



            <!--</RelativeLayout>-->


        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EBEBEB"
        ></View>

    <android.support.v7.widget.RecyclerView
        android:visibility="visible"
        android:layout_below="@+id/community_search_result_act_top_bar"
        android:id="@+id/community_search_result_act_search_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/community_search_no_result_act_search_rl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:text="검색 결과 없음"
            android:textColor="#D8D8D8"
            android:textSize="24dp" />
    </RelativeLayout>

    <!--재검색을 위한 창-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/community_search_act_is_display_search_box_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/community_search_act_is_display_blind_panel_rl"
            android:background="#77000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/community_search_act_top_bar_rl"
                android:background="@drawable/community_frag_bar_search_box_shape"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp">
                <ImageView
                    android:id="@+id/community_search_act_top_bar_search_iv"
                    android:src="@drawable/community_search"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginRight="8dp"/>
                <EditText
                    android:id="@+id/community_search_act_top_bar_search_et"
                    android:fontFamily="@font/nanumbarungothiclight"
                    android:background="#00000000"
                    android:textSize="12dp"
                    android:hint="'커뮤니티 글을 검색해보세요.'"
                    android:gravity="left|center"
                    android:layout_toRightOf="@+id/community_search_act_top_bar_search_iv"
                    android:layout_toLeftOf="@+id/community_search_result_act_search_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"/>
                <RelativeLayout
                    android:id="@+id/community_search_result_act_search_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/community_search_act_top_bar_search_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:text="검색"

                        />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/community_search_act_top_bar_search_cancel_btn"
                android:text="취소"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/nanumbarungothiclight_normal" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
