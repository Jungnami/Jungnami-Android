<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/community_search_result_act_top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/community_search_result_act_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/contents_backarrow"
            />

        <RelativeLayout
            android:id="@+id/community_search_result_act_search_bar"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/community_frag_bar_search_box_shape">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/community_search_result_act_search_iv"
                    android:src="@drawable/community_search"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:id="@+id/community_search_result_act_search_reult_tv"
                    android:visibility="visible"
                    android:layout_toRightOf="@+id/community_search_result_act_search_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="김성태"
                    android:layout_centerVertical="true"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/nanumbarungothic_normal"/>



            </RelativeLayout>

            <!--<RelativeLayout-->
                <!--android:id="@+id/community_search_result_act_edit_top_bar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
