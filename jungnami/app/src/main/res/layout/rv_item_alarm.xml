<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="73dp">

    <RelativeLayout
        android:layout_width="74dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rv_alarm_item_user_img_iv"
            android:src="@drawable/alarm_none_profile_man_image"
            android:layout_width="56.5dp"
            android:layout_height="56.5dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="13dp"/>

        <RelativeLayout
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp">

            <ImageView
                android:id="@+id/rv_alarm_item_menu_iv"
                android:src="@drawable/alarm_community"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

            </RelativeLayout>

        </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="7dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp">

            <TextView
                android:id="@+id/rv_alarm_item_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothic_normal"
                android:text="동글문어"
                android:textSize="13sp"
                android:textColor="#757575"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/rv_alarm_item_user_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님이 댓글을 남겼습니다."
                android:textSize="13sp"
                android:textColor="#757575" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <TextView
                android:id="@+id/rv_alarm_item_user_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1시간"
                android:textSize="12dp"
                android:textColor="#707070"
                android:textStyle="normal"/>

        </LinearLayout>

    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10.05dp"
            android:layout_marginTop="28dp">
            
            <ImageView
                android:id="@+id/rv_alarm_item_follow_btn"
                android:src="@drawable/alarm_follow_blue"
                android:layout_width="66dp"
                android:layout_height="25dp"
                />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>