<?xml version="1.0" encoding="utf-8"?>
<!--글씨크기 + 2 변경완료-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="232dp"
        android:layout_height="287dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent">

            <ImageView
                android:src="@drawable/coinpage_popup_character"
                android:layout_width="63dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                />

            <ImageView
                android:src="@drawable/coinpage_popup_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="56dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sponsoring_frag_box_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nanumbarungothic_normal"
                android:text="구매하기"
                android:textSize="20dp"
                android:textColor="#6b6b6b" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="76.13dp"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/coinpage_frag_popup_purchase_money_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbarungothiclight_normal"
                            android:text="-원"
                            android:textSize="17dp"
                            android:textColor="#757575"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbarungothiclight_normal"
                            android:text="으로 "
                            android:textSize="17dp"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/coinpage_frag_popup_purchase_coin_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbarungothiclight_normal"
                            android:text="-코인"
                            android:textSize="17dp"
                            android:textColor="#757575"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbarungothiclight_normal"
                            android:text="을"
                            android:textSize="17dp"
                            android:textColor="#757575"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbarungothiclight_normal"
                            android:text="구매하시겠습니까?"
                            android:textSize="17dp"
                            android:textColor="#757575"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="51.5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/coinpage_frag_popup_purchase_check_box_btn"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/dialog_check_box_shape">

                            <ImageView
                                android:visibility="invisible"
                                android:id="@+id/coinpage_frag_popup_purchase_check_btn"
                                android:src="@drawable/coin_check_icon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                        </RelativeLayout>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/nanumbarungothiclight_normal"
                            android:text="구매조건 확인 및 결제진행 동의"
                            android:textSize="13dp"
                            android:textColor="#c2c2c2"/>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="23dp"
                android:layout_marginHorizontal="16dp">

                <ImageView
                    android:id="@+id/coinpage_purchase_popup_cancel_btn"
                    android:src="@drawable/coinpage_popup_cancle_btn_blue"
                    android:layout_width="89dp"
                    android:layout_height="31dp" />

                <ImageView
                    android:id="@+id/coinpage_purchase_popup_check_btn"
                    android:src="@drawable/coinpage_popup_check_btn_blue"
                    android:layout_width="89dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:src="@drawable/coinpage_popup_good_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>