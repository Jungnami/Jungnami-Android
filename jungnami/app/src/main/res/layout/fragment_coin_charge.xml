<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".coinpage.CoinChargeFragment"
    android:background="#FFFFFF">
    <!--made by YounHwan-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="137dp">
                <LinearLayout
                    android:layout_above="@+id/coincharge_frag_my_coin_tv"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/coinpage_coin_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:text="나의 코인"
                        android:textSize="12dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="#3C3C3C"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/coincharge_frag_my_coin_tv"
                    android:textColor="#36C5F1"
                    android:text="72코인"
                    android:fontFamily="@font/nanumbarungothic"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="26dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="#858585"/>
            <RelativeLayout
                android:background="#F9F9FB"
                android:layout_width="match_parent"
                android:layout_height="78dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp">
                        <TextView
                            android:text="정나미 코인이란?"
                            android:textColor="#707070"
                            android:textSize="12dp"
                            android:fontFamily="@font/nanumbarungothic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/coinpage_questionmark"
                            android:layout_width="14dp"
                            android:layout_height="14dp" />
                    </LinearLayout>
                    <TextView
                        android:fontFamily="@font/nanumbarungothic"
                        android:textSize="11dp"
                        android:textColor="#B7B7B7"
                        android:text="국회의원의 호감, 비호감을 투표하기 위해 필요한 Point 입니다."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:fontFamily="@font/nanumbarungothic"
                        android:textSize="11dp"
                        android:textColor="#B7B7B7"
                        android:text="결제를 통해 구매하거나 서비스 이용을 통해 무료로 얻을 수 있습니다."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.25dp"
                android:background="#858585"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/coincharge_frag_recyclerview_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>