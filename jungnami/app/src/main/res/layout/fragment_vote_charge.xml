<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".coinpage.VoteChargeFragment"
    android:background="#FFFFFF">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="137dp">
            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/coinpage_coin_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:text="1코인"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="#36C5F1"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="28dp"
                    android:src="@drawable/coinpage_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/coinpage_good_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:text="1투표권"
                        android:fontFamily="@font/nanumbarungothic"
                        android:textColor="#36C5F1"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#858585"/>
        <RelativeLayout
            android:background="#F9F9FB"
            android:layout_width="match_parent"
            android:layout_height="78dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp">
                    <TextView
                        android:text="투표권 전환방법!"
                        android:textColor="#707070"
                        android:textSize="12dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/coinpage_questionmark"
                        android:layout_width="14dp"
                        android:layout_height="14dp" />
                </LinearLayout>
                <TextView
                    android:fontFamily="@font/nanumbarungothic"
                    android:textSize="11dp"
                    android:textColor="#B7B7B7"
                    android:text="국회의원에게 투표를 하기 위해서는 투표권이 필요합니다."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:fontFamily="@font/nanumbarungothic"
                    android:textSize="11dp"
                    android:textColor="#B7B7B7"
                    android:text="코인을 원하는 개수만큼 투표권으로 전환 할 수 있습니다."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#858585"/>
        <LinearLayout
            android:layout_marginVertical="23dp"
            android:layout_marginHorizontal="22dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="얼마를 전환하시겠습니까?"
                android:textSize="16dp"
                android:textColor="#6B6B6B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/votecharge_frag_vote_count_input_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#36C5F1"
                android:hint="투표권(갯수)"
                android:inputType="number"
                android:textColor="#9B9B9B"
                android:textColorHint="#9B9B9B"
                android:textSize="15dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/nanumbarungothiclight"
                    android:textColor="#757575"
                    android:textSize="11dp"
                    android:text="나의 보유 코인 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/votecharge_frag_my_having_coin_count_tv"
                    android:fontFamily="@font/nanumbarungothic"
                    android:textSize="11dp"
                    android:text="-코인"
                    android:textColor="#36C5F1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/votecharge_frag_exchange_btn_tv"
        android:background="@drawable/coin_page_vote_charge_bottom_box_shape"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanumbarungothic"
                android:text="전환하기"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>